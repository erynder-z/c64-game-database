<h1><%= title %>: <%= genre.name %></h1>
<% if ( genre_games.length > 0) { %>
<p>
  <strong
    >Delete the following games before attempting to delete this genre.</strong
  >
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Games</h4>
  <% for(const game of genre_games) {%>
  <li>
    <a href="<%=game.url%>"><%=game.title%></a>
    <p><%= game.summary %></p>
  </li>
  <% } %>
</div>
<% } else { %>
<p><strong>Do you really want to delete this genre?</strong></p>
<form class="col s12" action="" method="post">
  <div class="form-group">
    <input
      id="genreid"
      class="form-control"
      type="hidden"
      name="genreid"
      required="true"
      value="<%= genre._id %>"
    />
  </div>
  <button
    type="submit"
    class="modal-close waves-effect waves-green btn styled-btn"
  >
    Submit
  </button>
</form>
<% } %>
