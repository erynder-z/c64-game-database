<div class="row">
  <div class="publisher-card">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><h4><%=genre.name%></h4></span>
        <h5>Games</h5>
        <ul class="collection">
          <% if(genre_games.length > 0){ %> <% for(const game of genre_games)
          {%>
          <li class="collection-item grey darken-3">
            <strong><a href="<%=game.url%>"><%=game.title%></a></strong>
          </li>

          <% } %>
        </ul>
        <% } else { %>
        <p>This genre has no games</p>
        <% } %>
      </div>
      <hr />
      <p>
        <a href="<%= genre.url %>/delete ">Delete Genre</a>
      </p>
      <p>
        <a href="<%= genre.url %>/update ">Update Genre</a>
      </p>
    </div>
  </div>
</div>
