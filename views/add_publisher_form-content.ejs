<div class="row">
  <form class="col s12" action="" method="post">
    <div class="row">
      <div class="input-field col s12">
        <input
          placeholder="Name of publisher"
          id="publisherName"
          name="publisherName"
          type="text"
          class="validate"
        />
        <label for="publisherName" name="publisherName" class="black-text"
          >Name</label
        >
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input
          placeholder="Company founded year"
          id="founded"
          name="founded"
          type="number"
          class="validate"
        />
        <label for="founded" name="founded" class="black-text">Founded</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input
          placeholder="Company defunct year"
          id="defunct"
          name="defunct"
          type="number"
          class="validate"
        />
        <label for="defunct" name="defunct" class="black-text">Defunct</label>
      </div>
    </div>
    <button type="submit" class="modal-close waves-effect waves-green btn">
      Submit
    </button>
  </form>
</div>
